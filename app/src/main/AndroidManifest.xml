<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 发送通知权限申请 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnAndroidJava"
        tools:targetApi="31">
        <!-- 添加活动主入口 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            tools:ignore="WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.NoticeActivity" />
        <activity android:name=".activity.RelativeLayoutActivity" />
        <activity android:name=".activity.FrameLayoutActivity" />
        <activity android:name=".activity.TableLayoutActivity" />
        <activity android:name=".activity.GridLayoutActivity" />
        <activity android:name=".activity.ListViewActivity" />
        <activity android:name=".activity.ConstraintLayoutActivity" />
        <activity android:name="com.example.learnandroidjava.activity.RecyclerViewActivity" />
        <activity android:name="com.example.learnandroidjava.activity.FrameByFrameActivity" />
    </application>
</manifest>